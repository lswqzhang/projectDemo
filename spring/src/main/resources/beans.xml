<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd 
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd"
       default-lazy-init="false">
    
    <context:annotation-config/>
    
    <!-- 类的定义和创建 -->
    <bean id="beanFactoryPostProcessor" class="com.lswq.lifecycle.spring.MyBeanFactoryPostProcessor"/>
    <!-- 类实例化 -->
    <bean id="instantiationAwareBeanPostProcessor"
          class="com.lswq.lifecycle.spring.MyInstantiationAwareBeanPostProcessor"/>
    <!-- 类实例化的前后的操作 -->
    <bean id="beanPostProcessor" class="com.lswq.lifecycle.spring.MyBeanPostProcessor"/>

    <bean id="person" class="com.lswq.lifecycle.spring.Person"
          init-method="myInit"
          destroy-method="myDestroy"
          scope="singleton"
          p:name="张三"
          p:address="广州"
          p:phone="15900000000"/>


</beans>